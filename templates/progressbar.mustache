

<!-- mod_learningtimecheck/progressbar -->
<div class="ltc-progressbar">
    {{#bars}}
    <div class="ltc-bar-box">
        <div style="display:block; width:250px;" class="ltc-progress-heading">
            {{heading}}:&nbsp;
        </div>
        <div class="ltc-progress-required">
            <div class="ltc-progress-outer">
                <div class="ltc-progress-inner" style="width:{{percentcomplete}}%; background-image: url({{{progressurl}}});" >&nbsp;</div>
                <div class="ltc-progress-anim" style="width:{{percentcomplete}}%; background-image: url({{{progressfadeurl}}});" >&nbsp;</div>
            </div>
            <span class="ltc-progress-percent">&nbsp;{{formattedpercentcomplete}}% </span>
            <span class="ltc-progress-items">&nbsp;{{{info}}} </span>
        </div>
    </div>
    {{/bars}}
</div>
<!-- /mod_learningtimecheck/progressbar -->
