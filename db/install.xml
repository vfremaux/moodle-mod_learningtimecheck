<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/learningtimecheck/db" VERSION="20120920" COMMENT="XMLDB file for Moodle mod/learningtimecheck"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="learningtimecheck" COMMENT="main learningtimecheck table" NEXT="learningtimecheck_item">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="useritemsallowed" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Whether or not users are allowed to add their own items to the learningtimecheck"/>
        <FIELD NAME="teacheredit" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Whether the marking will be done by: 0 - students only (default), 1 - teacher only; 2 - both teacher and student"/>
        <FIELD NAME="duedatesoncalendar" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Add due dates to the course calendar"/>
        <FIELD NAME="teachercomments" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Are teachers allowed to add comments to a user's learningtimecheck items?"/>
        <FIELD NAME="maxgrade" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="100" SEQUENCE="false"/>
        <FIELD NAME="autopopulate" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Automatically fill in the learningtimecheck, based on the modules in the current course"/>
        <FIELD NAME="autoupdate" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="Automatically update items that are linked to course modules (tick them off when items are complete)"/>
        <FIELD NAME="completionpercent" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Percentage of items that need to be checked off before the learningtimecheck is regarded as complete"/>
        <FIELD NAME="completionmandatory" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Percentage of mandatory items that need to be checked off before the learningtimecheck is regarded as complete"/>
        <FIELD NAME="emailoncomplete" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Whether or not to email teachers when a learningtimecheck is completed"/>
        <FIELD NAME="lockteachermarks" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="If true, then teachers will be unable to change marks after saving a 'yes'"/>
        <FIELD NAME="usetimecounterpart" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="If true, we use credit times" />
        <FIELD NAME="lastcompiledtime" TYPE="int" LENGTH="11" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="If true, we use credit times"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="mdl_chec_cou_ix" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="learningtimecheck_item" COMMENT="Records the items in the learningtimecheck" PREVIOUS="learningtimecheck" NEXT="learningtimecheck_check">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="learningtimecheck"/>
        <FIELD NAME="learningtimecheck" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="learningtimecheck" NEXT="displaytext"/>
        <FIELD NAME="displaytext" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="userid" NEXT="position"/>
        <FIELD NAME="position" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="displaytext" NEXT="indent"/>
        <FIELD NAME="indent" TYPE="int" LENGTH="8" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="position" NEXT="itemoptional"/>
        <FIELD NAME="itemoptional" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="indent" NEXT="credittime"/>
        <FIELD NAME="credittime" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Date/time credited when validated" PREVIOUS="itemoptional" NEXT="teachercredittime"/>
        <FIELD NAME="teachercredittime" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Date/time credited for teacher per item" PREVIOUS="credittime" NEXT="teachercredittimeperuser"/>
        <FIELD NAME="teachercredittimeperuser" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Date/time credited per user for teacher on item" PREVIOUS="teachercredittime" NEXT="enablecredit"/>
        <FIELD NAME="enablecredit" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Date/time estimated for teacher" PREVIOUS="teachercredittimeperuser" NEXT="isdeclarative"/>
        <FIELD NAME="isdeclarative" TYPE="int" LENGTH="4" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Is the item declarative for students or teacher" PREVIOUS="enablecredit" NEXT="eventid"/>
        <FIELD NAME="eventid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="id of the calendar event (if any) associated with this item" PREVIOUS="isdeclarative" NEXT="colour"/>
        <FIELD NAME="colour" TYPE="char" LENGTH="15" NOTNULL="true" DEFAULT="black" SEQUENCE="false" PREVIOUS="eventid" NEXT="moduleid"/>
        <FIELD NAME="moduleid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="id of the course module (if any) associated with this item" PREVIOUS="colour" NEXT="hidden"/>
        <FIELD NAME="hidden" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether or not the item should be hidden from students" PREVIOUS="moduleid" NEXT="grouping"/>
        <FIELD NAME="grouping" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Grouping that the item's module belongs to" PREVIOUS="hidden"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid" UNIQUE="false" FIELDS="userid" NEXT="learningtimecheck"/>
        <INDEX NAME="learningtimecheck" UNIQUE="false" FIELDS="learningtimecheck" PREVIOUS="userid" NEXT="item_module"/>
        <INDEX NAME="item_module" UNIQUE="false" FIELDS="moduleid" PREVIOUS="learningtimecheck"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="learningtimecheck_check" COMMENT="Records when items where checked off" PREVIOUS="learningtimecheck_item" NEXT="learningtimecheck_comment">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="item"/>
        <FIELD NAME="item" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The user that checked this item" PREVIOUS="item" NEXT="usertimestamp"/>
        <FIELD NAME="usertimestamp" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="userid" NEXT="declaredtime"/>
        <FIELD NAME="declaredtime" TYPE="int" LENGTH="11" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="usertimestamp" NEXT="teacherid"/>
        <FIELD NAME="teacherid" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="declaredtime" NEXT="teachermark"/>
        <FIELD NAME="teachermark" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="teacherid" NEXT="teacherdeclaredtime"/>
        <FIELD NAME="teacherdeclaredtime" TYPE="int" LENGTH="11" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="teachermark" NEXT="teachertimestamp"/>
        <FIELD NAME="teachertimestamp" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="teacherdeclaredtime"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="ix_item" UNIQUE="false" FIELDS="item" NEXT="ix_userid"/>
        <INDEX NAME="ix_userid" UNIQUE="false" FIELDS="userid" PREVIOUS="ix_item" NEXT="ix_teacherid"/>
        <INDEX NAME="ix_teacherid" UNIQUE="false" FIELDS="teacherid" PREVIOUS="ix_userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="learningtimecheck_comment" COMMENT="A comment, added by a teacher, to an item on a user's learningtimecheck" PREVIOUS="learningtimecheck_check">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="itemid"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The id of the item this comment is attached to" PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The id of the user on whose learningtimecheck this comment has been added" PREVIOUS="itemid" NEXT="commentby"/>
        <FIELD NAME="commentby" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="The userid of the teacher who has added the comment" PREVIOUS="userid" NEXT="text"/>
        <FIELD NAME="text" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The text of the comment, as added by the teacher" PREVIOUS="commentby"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="learningtimecheck_item_user" UNIQUE="true" FIELDS="itemid, userid" COMMENT="Will usually want to find the comment by both itemid and userid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>